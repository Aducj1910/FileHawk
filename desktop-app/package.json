{
  "name": "filefinder-desktop",
  "version": "1.0.0",
  "description": "Modern desktop app for FileFinder - Local Semantic File Search Tool",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run build:renderer:dev\" \"npm run build:watch\" \"npm run start\"",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc",
    "build:watch": "tsc --watch",
    "build:renderer": "webpack --mode production",
    "build:renderer:dev": "webpack --mode development --watch",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "file-search",
    "semantic-search",
    "desktop-app",
    "electron"
  ],
  "author": "FileFinder Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@types/electron": "^1.6.12",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^2.0.0",
    "html-webpack-plugin": "^5.6.3",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "autoprefixer": "^10.4.0",
    "lucide-react": "^0.539.0",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-file-icon": "^1.6.0",
    "react-syntax-highlighter": "^15.6.3",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.filefinder.desktop",
    "productName": "FileFinder",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.png"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
